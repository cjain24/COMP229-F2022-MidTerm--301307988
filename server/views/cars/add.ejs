<% include ../partials/header.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Car Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Car Name:"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="carcatfield">Category</label>
          <input
            type="text"
            class="form-control"
            id="carcatfield"
            placeholder="Enter the car's category:"
            name="category"
            required
          />
        </div>

        <div class="from-group">
          <label for="modelTextField">Model</label>
          <input
            type="text"
            class="form-control"
            id="modelTextField"
            placeholder="Enter the Car's model:"
            name="model"
            required
          />
        </div>

    

        <div class="from-group">
          <label for="priceTextField">Price</label>
          <input
            type="number"
            class="form-control"
            id="pricecTextField"
            placeholder="Enter the Price of the Car:"
            name="price"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="cars/index" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

